<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane id="dashboard-professor-tg" fitToWidth="true" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #F8F9FA; -fx-background: transparent;" vbarPolicy="AS_NEEDED" stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.DashboardProfessorTGController">
    <content>
        <VBox alignment="TOP_CENTER" prefWidth="1180.0" style="-fx-spacing: 20; -fx-padding: 20;">
            
            <!-- (A) Header Superior - Card com informações do professor -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                        <Label text="Informações do Professor" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    <GridPane hgap="20" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30.0" />
                        </rowConstraints>
                        <children>
                            <VBox spacing="5" GridPane.columnIndex="0">
                                <children>
                                    <Label text="Nome do Professor:" textFill="#7F8C8D">
                                        <font>
                                            <Font size="12.0" />
                                        </font>
                                    </Label>
                                    <Label fx:id="labelNomeProfessor" text="Carregando..." textFill="#2C3E50">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                    </Label>
                                </children>
                            </VBox>
                            <VBox spacing="5" GridPane.columnIndex="1">
                                <children>
                                    <Label text="Disciplina:" textFill="#7F8C8D">
                                        <font>
                                            <Font size="12.0" />
                                        </font>
                                    </Label>
                                    <Label fx:id="labelDisciplina" text="Carregando..." textFill="#2C3E50">
                                        <font>
                                            <Font name="System Bold" size="14.0" />
                                        </font>
                                    </Label>
                                </children>
                            </VBox>
                        </children>
                    </GridPane>
                </children>
            </VBox>

            <!-- (B) Cards principais (3 colunas) -->
            <GridPane hgap="15" style="-fx-background-color: transparent;" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" prefWidth="300.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" prefWidth="300.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="300.0" prefWidth="300.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="200.0" prefHeight="200.0" />
                </rowConstraints>
                <children>
                    <!-- Card 1: Alunos sendo orientados -->
                    <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" GridPane.columnIndex="0">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Region style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                <Label text="Alunos sendo orientados" textFill="#2C3E50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </HBox>
                            <VBox alignment="CENTER" spacing="10">
                                <Label fx:id="labelQtdAlunosOrientados" text="0" textFill="#2C3E50">
                                    <font>
                                        <Font name="System Bold" size="48.0" />
                                    </font>
                                </Label>
                                <Label text="alunos da sua disciplina" textFill="#7F8C8D" wrapText="true">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Label>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Card 2: Orientadores -->
                    <VBox spacing="10" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" GridPane.columnIndex="1">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                <Label text="Orientadores" textFill="#2C3E50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </HBox>
                            <VBox spacing="8" prefHeight="150.0">
                                <ScrollPane fitToWidth="true" prefHeight="150.0" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
                                    <content>
                                        <VBox fx:id="vboxOrientadores" spacing="8" />
                                    </content>
                                </ScrollPane>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Card 3: Agendamentos mais próximos -->
                    <VBox spacing="10" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" GridPane.columnIndex="2">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Region style="-fx-background-color: #16A085; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                <Label text="Agendamentos mais próximos" textFill="#2C3E50">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </HBox>
                            <VBox spacing="5" prefHeight="100.0">
                                <ScrollPane fitToWidth="true" prefHeight="100.0" style="-fx-background-color: transparent;" vbarPolicy="AS_NEEDED">
                                    <content>
                                        <VBox fx:id="vboxAgendamentos" spacing="5" />
                                    </content>
                                </ScrollPane>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </GridPane>

            <!-- (C) Tabela de Alunos -->
            <VBox spacing="10" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region style="-fx-background-color: #9B59B6; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                        <Label text="Alunos da Disciplina" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 0 0 0;">
                        <children>
                            <Label text="Buscar:" textFill="#7F8C8D">
                                <font>
                                    <Font size="12.0" />
                                </font>
                            </Label>
                            <TextField fx:id="txtBuscaAluno" onKeyReleased="#filtrarAlunos" prefWidth="200.0" promptText="Digite o nome do aluno..." style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;" />
                            <Region HBox.hgrow="ALWAYS" />
                        </children>
                    </HBox>
                    <TableView fx:id="tabelaAlunos" prefHeight="300.0" prefWidth="1140.0">
                        <columns>
                            <TableColumn fx:id="colNomeAluno" minWidth="150.0" prefWidth="200.0" text="Nome" />
                            <TableColumn fx:id="colEmailAluno" minWidth="150.0" prefWidth="250.0" text="Email" />
                            <TableColumn fx:id="colOrientador" minWidth="150.0" prefWidth="200.0" text="Orientador" />
                            <TableColumn fx:id="colProgresso" minWidth="100.0" prefWidth="150.0" text="Progresso" />
                            <TableColumn fx:id="colAcao" minWidth="120.0" prefWidth="150.0" text="Ação" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
