<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: transparent;" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.DashboardAlunoController">
    <content>
        <VBox alignment="TOP_CENTER" prefWidth="1180.0" style="-fx-spacing: 20; -fx-padding: 20;">
            <children>
                <!-- Barra de navegação -->
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="1200.0" style="-fx-spacing: 25; -fx-padding: 5 20 10 20;">
                    <children>
                        <Label alignment="CENTER" prefHeight="47.0" prefWidth="400.0" text="DASHBOARD ALUNO">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#atualizarDashboard" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: #B82E1A;" text="Atualizar Dados" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#verSessoesAtuais" prefHeight="34.0" prefWidth="150.0" style="-fx-background-color: #3498DB;" text="Ver Sessões" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Cards de Estatísticas -->
                <GridPane hgap="15" style="-fx-background-color: transparent;" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="120.0" prefHeight="120.0" vgrow="NEVER" />
                    </rowConstraints>
                    <children>
                        <!-- Card Total de Sessões -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #3498DB; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 8, 0, 0, 3);" GridPane.columnIndex="0">
                            <children>
                                <Label text="Total de Sessões" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTotalSessoes" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Card Sessões Respondidas -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #27AE60; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 8, 0, 0, 3);" GridPane.columnIndex="1">
                            <children>
                                <Label text="Sessões Respondidas" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblSessoesRespondidas" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Card Sessões Pendentes -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #F39C12; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(243,156,18,0.3), 8, 0, 0, 3);" GridPane.columnIndex="2">
                            <children>
                                <Label text="Sessões Pendentes" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblSessoesPendentes" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Card Percentual de Progresso -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #9B59B6; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(155,89,182,0.3), 8, 0, 0, 3);" GridPane.columnIndex="3">
                            <children>
                                <Label text="Progresso" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblPercentualProgresso" text="0%" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <!-- Segunda linha de cards -->
                <GridPane hgap="15" style="-fx-background-color: transparent;" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="120.0" prefHeight="120.0" vgrow="NEVER" />
                    </rowConstraints>
                    <children>
                        <!-- Card Sessões Aprovadas -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #27AE60; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 8, 0, 0, 3);" GridPane.columnIndex="0">
                            <children>
                                <Label text="Sessões Aprovadas" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblSessoesAprovadas" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Card Sessões para Revisar -->
                        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #E74C3C; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.3), 8, 0, 0, 3);" GridPane.columnIndex="1">
                            <children>
                                <Label text="Sessões para Revisar" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblSessoesRevisar" text="0" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <!-- Gráfico de Pizza -->
                <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Region style="-fx-background-color: #9B59B6; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                            <Label text="Status das Sessões" textFill="#2C3E50">
                                <font>
                                    <Font name="System Bold" size="18.0" />
                                </font>
                            </Label>
                        </HBox>
                        <PieChart fx:id="pieChartStatus" prefHeight="300.0" prefWidth="1140.0" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>

