<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: C4C4C4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.TelaVisualizarSecaoApiAlunoController">
    <children>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" style="-fx-spacing: 25; -fx-padding: 10 20 10 20;">
            <children>
                <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: #5E5555;" text="Voltar" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="labelTitulo" alignment="CENTER" prefHeight="47.0" prefWidth="400.0" text="MINHA SEÇÃO API">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Button fx:id="btnFeedback" mnemonicParsing="false" onAction="#verFeedback" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5E5555;" text="Feedback" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#verHistorico" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5E5555;" text="Histórico" textFill="WHITE">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="560.0" prefWidth="780.0" style="-fx-background-color: transparent;" vbarPolicy="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" prefWidth="760.0" style="-fx-spacing: 15; -fx-padding: 20;">
                    <children>
                        <GridPane hgap="20" style="-fx-background-color: EAEAEA; -fx-padding: 20; -fx-background-radius: 8;" vgap="18">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="360.0" prefWidth="380.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                            </rowConstraints>

                            <!-- Problema -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <children>
                                    <Label text="Problema">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoProblema" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Solução -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <children>
                                    <Label text="Solução">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoSolucao" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Tecnologias utilizadas -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <children>
                                    <Label text="Tecnologias Utilizadas">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTecnologias" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Contribuições pessoais -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                <children>
                                    <Label text="Contribuições Pessoais">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoContribuicoes" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Hard Skills -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                <children>
                                    <Label text="Hard Skills">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoHardSkills" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Soft Skills -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                <children>
                                    <Label text="Soft Skills">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoSoftSkills" editable="false" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>
                        </GridPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
