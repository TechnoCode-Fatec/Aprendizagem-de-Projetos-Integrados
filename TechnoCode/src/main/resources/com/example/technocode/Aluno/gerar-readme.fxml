<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.layout.AnchorPane?>

<ScrollPane id="telas-aluno" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #F8F9FA; -fx-background: transparent;" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.GerarReadmeController">
   <content>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         
         <!-- Header Moderno -->
         <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <children>
               <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                  <Label text="GERAR README.md" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Label>
                  <Label text="Crie seu README.md profissional para GitHub" textFill="#7F8C8D">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </VBox>
               <HBox spacing="10">
                  <Button fx:id="btnCriarPasta" mnemonicParsing="false" onAction="#selecionarPasta" prefHeight="40.0" prefWidth="150.0" 
                          style="-fx-background-color: #27AE60; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 5, 0, 0, 2);" 
                          text="ðŸ“ Selecionar Pasta" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnAdicionarFoto" mnemonicParsing="false" onAction="#adicionarFoto" prefHeight="40.0" prefWidth="150.0" 
                          style="-fx-background-color: #3498DB; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 5, 0, 0, 2);" 
                          text="ðŸ“· Adicionar Foto" textFill="WHITE" disable="true">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </HBox>
            </children>
         </HBox>

         <!-- Card Principal com Tabs estilo GitHub -->
         <VBox spacing="0" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" minHeight="600.0">
            <children>
               <!-- Tabs estilo GitHub -->
               <HBox spacing="0" style="-fx-background-color: #F8F9FA; -fx-border-color: #E1E4E8; -fx-border-width: 0 0 1 0; -fx-background-radius: 12 12 0 0;">
                  <children>
                     <Button fx:id="btnTabCode" mnemonicParsing="false" onAction="#mostrarCode" prefHeight="40.0" prefWidth="120.0" 
                             style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-border-width: 0 0 2 0; -fx-border-color: #FD7E14; -fx-text-fill: #24292E; -fx-font-weight: bold; -fx-cursor: hand;" text="Code">
                        <font>
                           <Font name="System Bold" size="13.0" />
                        </font>
                     </Button>
                     <Button fx:id="btnTabPreview" mnemonicParsing="false" onAction="#mostrarPreview" prefHeight="40.0" prefWidth="120.0" 
                             style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-text-fill: #586069; -fx-cursor: hand;" text="Preview">
                        <font>
                           <Font name="System" size="13.0" />
                        </font>
                     </Button>
                     <Region HBox.hgrow="ALWAYS" />
                     <Label fx:id="labelStatusPasta" text="Nenhuma pasta criada" textFill="#586069" style="-fx-padding: 0 15 0 0;">
                        <font>
                           <Font size="11.0" />
                        </font>
                     </Label>
                  </children>
               </HBox>
               
               <!-- ConteÃºdo das Tabs -->
               <StackPane VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308" minHeight="500.0" prefHeight="600.0">
                  <children>
                     <!-- Tab Code (Markdown Raw) -->
                     <ScrollPane fx:id="scrollPaneCode" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" visible="true" VBox.vgrow="ALWAYS" StackPane.alignment="TOP_LEFT">
                        <content>
                           <AnchorPane minHeight="500.0" prefHeight="600.0">
                              <TextArea fx:id="textAreaMarkdown" editable="false" style="-fx-font-family: 'Consolas', 'Monaco', 'Courier New', monospace; -fx-font-size: 13px; -fx-background-color: #FFFFFF; -fx-border-color: transparent; -fx-text-fill: #24292f;" wrapText="true" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                              </TextArea>
                           </AnchorPane>
                        </content>
                     </ScrollPane>
                     
                     <!-- Tab Preview (WebView) -->
                     <WebView fx:id="webViewPreview" visible="false" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" StackPane.alignment="TOP_LEFT" />
                  </children>
               </StackPane>
            </children>
         </VBox>
      </VBox>
   </content>
</ScrollPane>

