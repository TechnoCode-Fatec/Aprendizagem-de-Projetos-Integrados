<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: C4C4C4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.TelaVisualizarSecaoAlunoController">
    <children>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" style="-fx-spacing: 25; -fx-padding: 10 20 10 20;">
            <children>
                <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: #5E5555;" text="Voltar" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="labelTitulo" alignment="CENTER" prefHeight="47.0" prefWidth="400.0" text="MINHA SEÇÃO">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="560.0" prefWidth="780.0" vbarPolicy="ALWAYS" style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" prefWidth="760.0" style="-fx-spacing: 15; -fx-padding: 20;">
                    <children>
                        <GridPane hgap="20" vgap="18" style="-fx-background-color: EAEAEA; -fx-padding: 20; -fx-background-radius: 8;">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="360.0" prefWidth="380.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                            </rowConstraints>

                            <!-- Nome Completo -->
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Nome Completo">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextNome" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Idade -->
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Idade">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextIdade" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Curso -->
                            <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Curso">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextCurso" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Motivação para entrar na Fatec -->
                            <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Motivação para entrar na Fatec">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextMotivacao" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Histórico Acadêmico -->
                            <VBox GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Histórico Acadêmico">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextHistorico" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- GitHub -->
                            <VBox GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="GitHub">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextGithub" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- LinkedIn -->
                            <VBox GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="LinkedIn">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextLinkedin" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Principais Conhecimentos -->
                            <VBox GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Principais Conhecimentos">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextConhecimentos" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                        </GridPane>

                        <HBox alignment="CENTER" style="-fx-padding: 20; -fx-spacing: 20;">
                            <children>
                                <Button mnemonicParsing="false" onAction="#verFeedback" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5E5555;" text="Ver Feedback" textFill="WHITE">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#verHistorico" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #5E5555;" text="Ver Histórico" textFill="WHITE">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
