<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane id="telas-aluno" fitToWidth="true" style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            stylesheets="@../css/estilo.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.SessoesAtuaisAlunoController">
   <content>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308">
         
         <!-- Header Moderno -->
         <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <children>
               <VBox alignment="CENTER_LEFT" spacing="5" HBox.hgrow="ALWAYS">
                  <Label text="SESSÕES ATUAIS" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="26.0" />
                     </font>
                  </Label>
                  <Label text="Gerencie suas seções de apresentação e API" textFill="#7F8C8D">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </VBox>
               <Button fx:id="btnNovaSessao" mnemonicParsing="false" onAction="#mostrarOpcoesNovaSessao" prefHeight="40.0" prefWidth="150.0" 
                       style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" 
                       text="+ NOVA SESSÃO" textFill="WHITE">
                  <font>
                     <Font name="System Bold" size="13.0" />
                  </font>
               </Button>
            </children>
         </HBox>

         <!-- Container para seções de apresentação -->
         <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Region style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                  <Label text="Seções de Apresentação" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </HBox>
               <VBox fx:id="containerApresentacoes" spacing="12" style="-fx-padding: 15 0 0 0;">
               </VBox>
               <!-- Botão para adicionar apresentação (visível apenas quando não há apresentações) -->
               <Button fx:id="btnAdicionarApresentacao" mnemonicParsing="false" onAction="#adicionarApresentacao" prefHeight="45.0" 
                       style="-fx-background-color: #27AE60; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 5, 0, 0, 2);" 
                       text="+ ADICIONAR APRESENTAÇÃO" textFill="WHITE" maxWidth="1.7976931348623157E308">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </children>
         </VBox>
         
         <!-- Container para seções de API -->
         <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                  <Label text="Seções de API" textFill="#2C3E50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </HBox>
               <VBox fx:id="containerApis" spacing="12" style="-fx-padding: 15 0 0 0;">
               </VBox>
               <!-- Botão para adicionar API (visível apenas quando não há APIs) -->
               <Button fx:id="btnAdicionarApi" mnemonicParsing="false" onAction="#adicionarApi" prefHeight="45.0" 
                       style="-fx-background-color: #27AE60; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 5, 0, 0, 2);" 
                       text="+ ADICIONAR API" textFill="WHITE" maxWidth="1.7976931348623157E308">
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </children>
         </VBox>
      </VBox>
   </content>
</ScrollPane>

