<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane fx:id="rootPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.PrincipalAlunoController" stylesheets="@../css/estilo.css">
   <top>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: WHITE; -fx-border-color: #c9c9c9; -fx-border-width: 0 0 1 0; -fx-padding: 10;" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <StackPane style="-fx-padding: 0 15 0 15;">
               <children>
                  <Rectangle arcHeight="12.0" arcWidth="12.0" fill="#cc2424" height="30.0" smooth="false" stroke="#cc2424" strokeType="INSIDE" width="30.0" />
                  <Label text="TG" textFill="WHITE">
                     <font>
                        <Font name="Arial Black" size="14.0" />
                     </font>
                  </Label>
               </children>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="15.63" radius="7.0625" width="14.62" />
               </effect>
            </StackPane>
            <VBox alignment="CENTER_LEFT" style="-fx-padding: 0 15 0 0;">
               <children>
                  <Label text="TechnoTG">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Label text="Sistema Academico Fatec" textFill="#767676">
                     <font>
                        <Font size="10.0" />
                     </font></Label>
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 5;">
               <children>
                  <VBox alignment="CENTER_RIGHT" style="-fx-padding: 5;">
                     <children>
                        <Label fx:id="labelNomeAluno" alignment="CENTER_RIGHT" text="Rodrigo Garro" textFill="#434343">
                           <font>
                              <Font name="Arial Bold" size="10.0" />
                           </font>
                        </Label>
                        <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Aluno" textAlignment="RIGHT" textFill="#acacac" textOverrun="CLIP" />
                     </children>
                  </VBox>
                   <Button fx:id="btnSair" onAction="#onSair" style="-fx-background-color: WHITE;" contentDisplay="GRAPHIC_ONLY">
                       <graphic>
                           <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                               <image>
                                   <Image url="@../imagens/logoutver.png"/>
                               </image>
                           </ImageView>
                       </graphic>
                   </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </top>
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="164.0" prefWidth="263.0" style="-fx-background-color: WHITE; -fx-spacing: 10; -fx-padding: 15; -fx-min-width: 158;" BorderPane.alignment="CENTER">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#navegarInicio" style="-fx-background-color: WHITE;" text="Início" styleClass="menu-button" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#navegarEnviarApi" style="-fx-background-color: WHITE;" text="Enviar Api" styleClass="menu-button" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#navegarEnviarApresentacao" style="-fx-background-color: WHITE;" text="Enviar Apresentação" styleClass="menu-button" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#navegarHistorico" style="-fx-background-color: WHITE;" text="Histórico" styleClass="menu-button" />
         </children></VBox>
   </left>
    <center>
        <StackPane fx:id="centerContent" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
            <children>
                <!-- Conteúdo central dinâmico -->
                <AnchorPane fx:id="mainContent" />

                <!-- Imagem fixa no canto inferior esquerdo -->
                <ImageView fitWidth="200" preserveRatio="true" opacity="0.6"
                           AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">
                    <image>
                        <Image url="@../imagens/rodape_fatec.png" />
                    </image>
                </ImageView>
            </children>
        </StackPane>

    </center>
</BorderPane>
