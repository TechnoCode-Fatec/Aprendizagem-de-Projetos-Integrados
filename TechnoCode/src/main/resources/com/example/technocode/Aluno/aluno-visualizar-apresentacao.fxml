<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane id="telas-aluno" fitToWidth="true" style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            stylesheets="@../css/estilo.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.AlunoVisualizarApresentacaoController">
    <content>
        <VBox style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="40.0" prefWidth="120.0" 
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" 
                            text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label fx:id="labelTitulo" text="MINHA SEÇÃO" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualize os dados da sua apresentação" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                    <Button fx:id="btnFeedback" mnemonicParsing="false" onAction="#verFeedback" prefHeight="40.0" prefWidth="130.0" 
                            style="-fx-background-color: #3498DB; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 5, 0, 0, 2);" 
                            text="FEEDBACK" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#verHistorico" prefHeight="40.0" prefWidth="130.0" 
                            style="-fx-background-color: #9B59B6; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(155,89,182,0.3), 5, 0, 0, 2);" 
                            text="HISTÓRICO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#carregarVersaoAnteriorApresentacao" prefHeight="40.0" prefWidth="150.0" 
                            style="-fx-background-color: #27AE60; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 5, 0, 0, 2);" 
                            text="NOVA VERSÃO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Card Principal com Dados -->
            <VBox spacing="20" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" prefWidth="4" prefHeight="28" />
                        <Label text="Dados da Apresentação" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    
                    <VBox spacing="20" style="-fx-padding: 20 0 0 0;">
                        <!-- Nome Completo -->
                        <VBox spacing="8">
                            <Label text="Nome Completo" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextNome" editable="false" prefHeight="60.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>

                        <!-- Idade -->
                        <VBox spacing="8">
                            <Label text="Idade" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextIdade" editable="false" prefHeight="60.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>

                        <!-- Curso -->
                        <VBox spacing="8">
                            <Label text="Curso" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextCurso" editable="false" prefHeight="60.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>

                        <!-- Motivação para entrar na Fatec -->
                        <VBox spacing="8">
                            <Label text="Motivação para entrar na Fatec" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextMotivacao" editable="false" prefHeight="100.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>

                        <!-- Histórico Acadêmico -->
                        <VBox spacing="8">
                            <Label text="Histórico Acadêmico" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextHistorico" editable="false" prefHeight="100.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>

                        <!-- GitHub e LinkedIn -->
                        <HBox spacing="15">
                            <children>
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <Label text="GitHub" textFill="#34495E">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextGithub" editable="false" prefHeight="60.0" 
                                             style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                </VBox>
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <Label text="LinkedIn" textFill="#34495E">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoTextLinkedin" editable="false" prefHeight="60.0" 
                                             style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Principais Conhecimentos -->
                        <VBox spacing="8">
                            <Label text="Principais Conhecimentos" textFill="#34495E">
                                <font>
                                    <Font name="System Bold" size="12.0" />
                                </font>
                            </Label>
                            <TextArea fx:id="alunoTextConhecimentos" editable="false" prefHeight="100.0" 
                                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                        </VBox>
                    </VBox>
                </children>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
