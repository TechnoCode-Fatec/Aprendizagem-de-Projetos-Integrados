<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: C4C4C4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.TelaFeedbackApiAlunoController">
    <children>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" style="-fx-spacing: 25; -fx-padding: 10 20 10 20;">
            <children>
                <Button mnemonicParsing="false" onAction="#voltarTelaSecao" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: #5E5555;" text="Voltar" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="labelTitulo" alignment="CENTER" prefHeight="47.0" prefWidth="400.0" text="FEEDBACK - API">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="560.0" prefWidth="780.0" vbarPolicy="ALWAYS" style="-fx-background-color: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" prefWidth="760.0" style="-fx-spacing: 15; -fx-padding: 20;">
                    <children>
                        <GridPane hgap="20" vgap="18" style="-fx-background-color: EAEAEA; -fx-padding: 20; -fx-background-radius: 8;">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="360.0" prefWidth="380.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                            </rowConstraints>

                            <!-- Problema -->
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Problema">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusProblema" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackProblema" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Solução -->
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Solução">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusSolucao" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackSolucao" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Tecnologias -->
                            <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Tecnologias Utilizadas">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusTecnologias" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackTecnologias" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Contribuições -->
                            <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Contribuições Pessoais">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusContribuicoes" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackContribuicoes" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Hard Skills -->
                            <VBox GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Hard Skills">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusHardSkills" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackHardSkills" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>

                            <!-- Soft Skills -->
                            <VBox GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Soft Skills">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusSoftSkills" text="Status" style="-fx-font-weight: bold;">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackSoftSkills" editable="false" wrapText="true" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                        </GridPane>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>
