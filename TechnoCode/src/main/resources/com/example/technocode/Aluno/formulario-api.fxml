<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<?import java.lang.String?>
<ScrollPane id="formulario" fitToWidth="true" style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            stylesheets="@../css/estilo.css"
            styleClass="formulario-container"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.technocode.Controllers.Aluno.FormularioApiController">
    <content>
        <VBox style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltar" prefHeight="40.0" prefWidth="120.0" 
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" 
                            text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="PROJETOS API" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Preencha os dados do seu projeto de API" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                    <Region prefWidth="120.0" />
                </children>
            </HBox>

            <!-- Informações Acadêmicas - Card Moderno -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region style="-fx-background-color: #B82E1A; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                        <Label text="Informações Acadêmicas" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </HBox>
                    <GridPane hgap="20" vgap="15" style="-fx-padding: 10 0 0 0;">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="250" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints valignment="CENTER" minHeight="60" />
                        </rowConstraints>
                        <children>
                            <VBox spacing="8" GridPane.columnIndex="0">
                                <Label text="Semestre do Curso" textFill="#34495E">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="choiceBoxSemestreDoCurso" prefWidth="1.7976931348623157E308" 
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-text-fill: #2C3E50; -fx-prompt-text-fill: #95A5A6;">
                                    <styleClass>
                                        <String fx:value="choice-box-dark-text" />
                                    </styleClass>
                                </ChoiceBox>
                            </VBox>
                            <VBox spacing="8" GridPane.columnIndex="1">
                                <Label text="Ano" textFill="#34495E">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtAno" prefWidth="1.7976931348623157E308" 
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-prompt-text-fill: #95A5A6;" />
                            </VBox>
                            <VBox spacing="8" GridPane.columnIndex="2">
                                <Label text="Semestre" textFill="#34495E">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="choiceBoxSemestre" prefWidth="1.7976931348623157E308" 
                                           style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8; -fx-text-fill: #2C3E50; -fx-prompt-text-fill: #95A5A6;">
                                    <styleClass>
                                        <String fx:value="choice-box-dark-text" />
                                    </styleClass>
                                </ChoiceBox>
                            </VBox>
                        </children>
                    </GridPane>
                </children>
            </VBox>

            <!-- Layout em 2 Colunas Principais -->
            <HBox spacing="20" alignment="TOP_CENTER">
                <children>
                    
                    <!-- Coluna Esquerda -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Informações da Empresa -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Informações da Empresa" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <VBox spacing="8">
                                            <Label text="Empresa Parceira" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextField fx:id="txtEmpresa" prefHeight="40.0" 
                                                       style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-prompt-text-fill: #95A5A6;" />
                                        </VBox>
                                        <VBox spacing="8">
                                            <Label text="Descrição da Empresa" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtDescricaoEmpresa" prefHeight="100.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>

                            <!-- Card: Problema e Solução -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Problema e Solução" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <VBox spacing="8">
                                            <Label text="Problema Identificado" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtProblema" prefHeight="110.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                        <VBox spacing="8">
                                            <Label text="Solução Implementada" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtSolucao" prefHeight="110.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Coluna Direita -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Informações do Projeto -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #9B59B6; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Informações do Projeto" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <VBox spacing="8">
                                            <Label text="Link do Repositório" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextField fx:id="txtLinkRepositorio" prefHeight="40.0" 
                                                       style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-prompt-text-fill: #95A5A6;" />
                                        </VBox>
                                        <VBox spacing="8">
                                            <Label text="Tecnologias Utilizadas" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtTecnologias" prefHeight="90.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                        <VBox spacing="8">
                                            <Label text="Contribuições Pessoais" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtContribuicoes" prefHeight="90.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>

                            <!-- Card: Skills -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #27AE60; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Skills Desenvolvidas" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <VBox spacing="8">
                                            <Label text="Hard Skills" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtHardSkills" prefHeight="90.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                        <VBox spacing="8">
                                            <Label text="Soft Skills" textFill="#34495E">
                                                <font>
                                                    <Font name="System Bold" size="12.0" />
                                                </font>
                                            </Label>
                                            <TextArea fx:id="txtSoftSkills" prefHeight="90.0" 
                                                      style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true;" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </HBox>

            <!-- Botão de Envio Moderno -->
            <HBox alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                <Button mnemonicParsing="false" onAction="#enviarSecaoApi" prefHeight="50.0" prefWidth="200.0" 
                        style="-fx-background-color: #B82E1A; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.4), 10, 0, 0, 3);" 
                        text="ENVIAR PROJETO" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
