<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" style="-fx-background-color: C4C4C4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Aluno.AlunoFeedbackApresentacaoController">
    <children>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="800.0" style="-fx-spacing: 25; -fx-padding: 10 20 10 20;">
            <children>
                <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: B82E1A;" text="Voltar" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Label fx:id="labelTitulo" alignment="CENTER" prefHeight="47.0" prefWidth="400.0" text="FEEDBACK - Apresentação">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#visualizarSecao" prefHeight="34.0" prefWidth="130.0" style="-fx-background-color: B82E1A;" text="Visualizar Seção" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" prefHeight="560.0" prefWidth="780.0" style="-fx-background-color: transparent;" vbarPolicy="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" prefWidth="760.0" style="-fx-spacing: 15; -fx-padding: 20;">
                    <children>
                        <GridPane hgap="20" style="-fx-background-color: EAEAEA; -fx-padding: 20; -fx-background-radius: 8;" vgap="18">
                            <columnConstraints>
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="360.0" prefWidth="380.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                            </rowConstraints>

                            <!-- Nome Completo -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Nome Completo">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusNome" style="-fx-font-weight: bold;" text="Status">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackNome" editable="false" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Idade -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Idade">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusIdade" style="-fx-font-weight: bold;" text="Status">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackIdade" editable="false" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Curso -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="Curso">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusCurso" style="-fx-font-weight: bold;" text="Status">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackCurso" editable="false" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- Motivação -->
