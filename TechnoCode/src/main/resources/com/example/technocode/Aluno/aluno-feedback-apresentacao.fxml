                                </children>
                            </VBox>

                            <!-- GitHub -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="GitHub">
                                                <font>
                                                    <Font name="System Bold" size="16.0" />
                                                </font>
                                            </Label>
                                            <Label fx:id="statusGithub" style="-fx-font-weight: bold;" text="Status">
                                                <font>
                                                    <Font size="14.0" />
                                                </font>
                                            </Label>
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackGithub" editable="false" prefHeight="100.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" wrapText="true" />
                                </children>
                            </VBox>

                            <!-- LinkedIn -->
                            <VBox style="-fx-spacing: 8;" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Label text="LinkedIn">
                                                <font>
