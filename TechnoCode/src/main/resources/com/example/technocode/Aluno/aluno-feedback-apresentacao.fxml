<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane id="feedback" fitToWidth="true" style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            stylesheets="@../css/estilo.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.technocode.Controllers.Aluno.AlunoFeedbackApresentacaoController">
    <content>
        <VBox style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="40.0" prefWidth="120.0" 
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" 
                            text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label fx:id="labelTitulo" text="FEEDBACK - APRESENTAÇÃO" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualize os feedbacks da sua apresentação" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                    <Button mnemonicParsing="false" onAction="#visualizarSecao" prefHeight="40.0" prefWidth="150.0" 
                            style="-fx-background-color: #3498DB; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 5, 0, 0, 2);" 
                            text="VISUALIZAR SEÇÃO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Layout em 2 Colunas Principais -->
            <HBox spacing="20" alignment="TOP_CENTER">
                <children>
                    
                    <!-- Coluna Esquerda -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Informações Pessoais -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Informações Pessoais" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <!-- Nome Completo -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Nome Completo" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusNome" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackNome" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Idade -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Idade" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusIdade" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackIdade" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Curso -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Curso" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusCurso" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackCurso" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Motivação -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Motivação para entrar na Fatec" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusMotivacao" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackMotivacao" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Coluna Direita -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Informações Profissionais -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #9B59B6; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Informações Profissionais" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <!-- Histórico Acadêmico -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Histórico Acadêmico" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusHistorico" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackHistorico" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- GitHub -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="GitHub" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusGithub" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackGithub" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- LinkedIn -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="LinkedIn" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusLinkedin" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackLinkedin" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Principais Conhecimentos -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Principais Conhecimentos" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusConhecimentos" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackConhecimentos" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
