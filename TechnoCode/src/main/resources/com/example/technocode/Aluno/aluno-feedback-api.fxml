                                                <Label text="Link do Repositório" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusRepositorio" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandRepositorio" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Hyperlink fx:id="linkRepositorio" style="-fx-text-fill: #3498DB; -fx-font-size: 12px; -fx-underline: true;" />
                                                <Region HBox.hgrow="ALWAYS" />
                                            </HBox>
                                            <VBox fx:id="containerFeedbackRepositorio" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackRepositorio" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>

                                        <!-- Problema -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Problema" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusProblema" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandProblema" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoProblema" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackProblema" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackProblema" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>

                                        <!-- Solução -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Solução" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusSolucao" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandSolucao" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoSolucao" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackSolucao" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackSolucao" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>

                                        <!-- Tecnologias -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Tecnologias Utilizadas" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusTecnologias" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandTecnologias" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoTecnologias" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackTecnologias" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackTecnologias" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Coluna Direita -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Habilidades e Contribuições -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #F39C12; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Habilidades e Contribuições" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <!-- Contribuições -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Contribuições Pessoais" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusContribuicoes" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandContribuicoes" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoContribuicoes" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackContribuicoes" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackContribuicoes" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>

                                        <!-- Hard Skills -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Hard Skills" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusHardSkills" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandHardSkills" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoHardSkills" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackHardSkills" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackHardSkills" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>

                                        <!-- Soft Skills -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Soft Skills" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusSoftSkills" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                                <Button fx:id="btnExpandSoftSkills" style="-fx-background-color: transparent; -fx-padding: 0; -fx-cursor: hand;" visible="false" managed="false">
                                                    <graphic>
                                                        <Label text="▼" textFill="#3498DB" style="-fx-font-size: 10px;" />
                                                    </graphic>
                                                </Button>
                                            </HBox>
                                            <TextArea fx:id="alunoSoftSkills" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                            <VBox fx:id="containerFeedbackSoftSkills" visible="false" managed="false" spacing="5">
                                                <Label text="Feedback:" textFill="#E74C3C" style="-fx-font-weight: bold; -fx-font-size: 11px;" />
                                                <TextArea fx:id="feedbackSoftSkills" editable="false" prefHeight="80.0" 
                                                          style="-fx-background-color: #FADBD8; -fx-border-color: #E74C3C; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #C0392B;" wrapText="true" />
                                            </VBox>
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
