<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane id="feedback" fitToWidth="true" style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            stylesheets="@../css/estilo.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.technocode.Controllers.Aluno.AlunoFeedbackApiController">
    <content>
        <VBox style="-fx-background-color: #F8F9FA; -fx-padding: 25;" spacing="20" maxWidth="1.7976931348623157E308">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltarTelaInicial" prefHeight="40.0" prefWidth="120.0" 
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" 
                            text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label fx:id="labelTitulo" text="FEEDBACK - API" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualize os feedbacks do seu projeto de API" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                    <Button mnemonicParsing="false" onAction="#visualizarSecao" prefHeight="40.0" prefWidth="150.0" 
                            style="-fx-background-color: #3498DB; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(52,152,219,0.3), 5, 0, 0, 2);" 
                            text="VISUALIZAR SEÇÃO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Layout em 2 Colunas Principais -->
            <HBox spacing="20" alignment="TOP_CENTER">
                <children>
                    
                    <!-- Coluna Esquerda -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Informações do Projeto -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Informações do Projeto" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <!-- Problema -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Problema" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusProblema" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackProblema" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Solução -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Solução" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusSolucao" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackSolucao" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Tecnologias -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Tecnologias Utilizadas" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusTecnologias" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackTecnologias" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>

                    <!-- Coluna Direita -->
                    <VBox spacing="20" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308">
                        <children>
                            <!-- Card: Habilidades e Contribuições -->
                            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                                <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Region style="-fx-background-color: #F39C12; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                                        <Label text="Habilidades e Contribuições" textFill="#2C3E50">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                    </HBox>
                                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                                        <!-- Contribuições -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Contribuições Pessoais" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusContribuicoes" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackContribuicoes" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Hard Skills -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Hard Skills" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusHardSkills" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackHardSkills" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>

                                        <!-- Soft Skills -->
                                        <VBox spacing="8">
                                            <HBox spacing="10" alignment="CENTER_LEFT">
                                                <Label text="Soft Skills" textFill="#34495E">
                                                    <font>
                                                        <Font name="System Bold" size="12.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="statusSoftSkills" style="-fx-font-weight: bold; -fx-padding: 4 12 4 12; -fx-background-radius: 12;" text="Status">
                                                    <font>
                                                        <Font size="11.0" />
                                                    </font>
                                                </Label>
                                            </HBox>
                                            <TextArea fx:id="feedbackSoftSkills" editable="false" prefHeight="100.0" 
                                                      style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10; -fx-wrap-text: true; -fx-text-fill: #2C3E50;" wrapText="true" />
                                        </VBox>
                                    </VBox>
                                </children>
                            </VBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
        </VBox>
    </content>
</ScrollPane>
