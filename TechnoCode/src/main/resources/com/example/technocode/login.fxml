<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.LoginController">
   <children>
      <Label text="TechnoTG Login">
         <font>
            <Font name="System Bold" size="25.0" />
         </font></Label>
      <HBox alignment="CENTER" style="-fx-spacing: 10; -fx-padding: 10;">
         <children>
            <Label text="Email">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <TextField fx:id="txtEmail" prefHeight="25.0" prefWidth="295.0" />
         </children>
      </HBox>
       <HBox alignment="CENTER" style="-fx-spacing: 10; -fx-padding: 10;">
           <children>
               <Label text="Senha">
                   <font>
                       <Font name="System Bold" size="12.0" />
                   </font>
               </Label>

               <!-- Campo de senha (oculto) -->
               <PasswordField fx:id="txtSenha" prefHeight="25.0" prefWidth="260.0" />

               <!-- Campo de texto (visível) -->
               <TextField fx:id="txtSenhaVisivel" prefHeight="25.0" prefWidth="260.0" visible="false" managed="false" />

               <!-- Botão de mostrar/ocultar -->
               <Button fx:id="btnToggleSenha" onAction="#toggleSenha" contentDisplay="GRAPHIC_ONLY" />
           </children>
       </HBox>
      <HBox alignment="CENTER" style="-fx-spacing: 100; -fx-padding: 20;">
         <children>
            <Button mnemonicParsing="false" onAction="#cadastrarUsuario" style="-fx-background-color: B82E1A;" text="Cadastrar" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#login" style="-fx-background-color: B82E1A;" text="Entrar" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
