<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.LoginController">
   <children>
      <Label text="TechnoTG Login">
         <font>
            <Font name="System Bold" size="25.0" />
         </font></Label>
      <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0" style="-fx-spacing: 10;">
         <children>
            <Label text="Email" />
            <TextField fx:id="txtEmail" />
         </children>
      </HBox>
       <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0" style="-fx-spacing: 10;">
           <children>
               <Label text="Senha" />
               <TextField fx:id="txtSenha" />
           </children>
       </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 100;">
         <children>
            <Button mnemonicParsing="false" style="-fx-background-color: GREY;" text="Novo Login">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#login" style="-fx-background-color: GREY;" text="Entrar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
