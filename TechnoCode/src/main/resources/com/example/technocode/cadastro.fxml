<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="452.0" prefWidth="600.0" style="-fx-background-color: C4C4C4; -fx-spacing: 8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.CadastroController">
   <children>

       <HBox prefHeight="0.0" prefWidth="600.0" style="-fx-spacing: 50; -fx-padding: 10;">
           <Button mnemonicParsing="false" onAction="#voltar" prefHeight="51.0" prefWidth="134.0" style="-fx-background-color: B82E1A;" text="VOLTAR" textFill="WHITE">
               <font>
                   <Font name="Inter Regular" size="22.0" />
               </font>
           </Button>
           <Label alignment="TOP_CENTER" prefHeight="47.0" prefWidth="220.0" text="CADASTRO">
             <font>
                <Font name="System Bold" size="32.0" />
             </font>
           </Label>
       </HBox>
       <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
           <children>
               <Label prefHeight="47.0" prefWidth="97.0" text="Nome:">
                   <font>
                       <Font name="Inter Regular" size="28.0" />
                   </font></Label>
               <TextField fx:id="txtNome" prefHeight="36.0" prefWidth="230.0" />
           </children></HBox>
       <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
         <children>
            <Label prefHeight="47.0" prefWidth="97.0" text="Email:">
                <font>
                    <Font name="Inter Regular" size="28.0" />
                </font></Label>
            <TextField fx:id="txtEmail" prefHeight="36.0" prefWidth="230.0" />
         </children></HBox>
      <HBox alignment="CENTER" prefHeight="48.0" prefWidth="600.0">
         <children>
            <Label prefHeight="47.0" prefWidth="97.0" text="Senha:">
                <font>
                    <Font name="Inter Regular" size="28.0" />
                </font></Label>
            <TextField fx:id="txtSenha" minHeight="-Infinity" prefHeight="36.0" prefWidth="230.0" />
         </children></HBox>
       <HBox alignment="CENTER" prefHeight="47.0" prefWidth="600.0" style="-fx-spacing: 50;">
           <children>
               <RadioButton fx:id="radioAluno" onAction="#toggleHboxOrientador" text="Aluno">
                   <font>
                       <Font name="System Bold" size="21.0" />
                   </font>
               </RadioButton>
               <RadioButton fx:id="radioOrientador" onAction="#toggleHboxOrientador" text="Orientador">
                   <font>
                       <Font name="System Bold" size="21.0" />
                   </font>
               </RadioButton>
           </children>
       </HBox>
      <HBox fx:id="hBoxOrientador" alignment="CENTER" prefHeight="36.0" prefWidth="600.0" style="-fx-spacing: 10;">
         <children>
            <Label prefHeight="35.0" prefWidth="108.0" text="Orientador:">
               <font>
                  <Font name="Inter Regular" size="20.0" />
               </font>
            </Label>
            <ComboBox fx:id="comboBoxOrientador" prefWidth="150.0" />
         </children>
      </HBox>
       <HBox fx:id="hBoxCurso" alignment="CENTER" prefHeight="36.0" prefWidth="600.0" style="-fx-spacing: 10;">
           <children>
               <Label prefHeight="35.0" prefWidth="108.0" text="Curso:">
                   <font>
                       <Font name="Inter Regular" size="20.0" />
                   </font>
               </Label>
               <ComboBox fx:id="comboBoxCurso" prefWidth="150.0" />
           </children>
       </HBox>
      <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#cadastrarUsuario" prefHeight="47.0" prefWidth="169.0" style="-fx-background-color: B82E1A;" text="CADASTRAR" textFill="WHITE">
         <font>
            <Font name="Inter Regular" size="22.0" />
         </font>
      </Button>
   </children>
</VBox>
