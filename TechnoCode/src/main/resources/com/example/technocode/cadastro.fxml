<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.effect.DropShadow?>
<StackPane style="-fx-background-color: linear-gradient(to bottom right, #fff5f5, #ffffff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.CadastroController">

    <children>
        <VBox alignment="CENTER" spacing="15">
            <children>

                <!-- Card de Cadastro (agora inclui logo e títulos) -->
                <VBox alignment="CENTER" maxHeight="620.0" maxWidth="420.0" prefHeight="480.0" prefWidth="380.0" spacing="12" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25 25 30 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 15, 0, 0, 5);">

                    <!-- Logo -->
                    <StackPane prefWidth="320.0" style="-fx-padding: 0 15 0 15;">
                        <children>
                            <Rectangle arcHeight="12.0" arcWidth="12.0" fill="#cc2424" height="50.0" smooth="false" stroke="#cc2424" strokeType="INSIDE" width="50.0" />
                            <Label text="TG" textFill="WHITE">
                                <font>
                                    <Font name="Arial Black" size="23.0" />
                                </font>
                            </Label>
                        </children>
                        <effect>
                            <DropShadow blurType="GAUSSIAN" height="15.63" radius="7.0625" width="14.62" />
                        </effect>
                    </StackPane>

                    <!-- Títulos -->
                    <Label text="TechnoTG" textFill="#222">
                        <font>
                            <Font name="System Bold" size="22" />
                        </font>
                    </Label>
                    <Label text="Sistema de Gerenciamento de TG" textFill="#666" />

                    <Separator prefWidth="260" style="-fx-opacity: 0.3;" />

                    <!-- Título -->
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Cadastro de Usuário" textFill="#333" />

                    <!-- Campo Nome -->
                    <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Nome Completo" textFill="#333" />
                    <TextField fx:id="txtNome" prefWidth="280" promptText="Digite seu nome completo" />

                    <!-- Campo E-mail -->
                    <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="E-mail Institucional" textFill="#333" />
                    <TextField fx:id="txtEmail" prefWidth="280" promptText="seu.email@fatec.sp.gov.br" />

                    <!-- Campo Senha -->
                    <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Senha" textFill="#333" />
                    <PasswordField fx:id="txtSenha" prefWidth="280" promptText="Crie uma senha segura" />

                    <!-- Tipo de usuário -->
                    <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Tipo de Usuário" textFill="#333" />
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <children>
                            <RadioButton fx:id="radioAluno" onAction="#toggleHboxOrientador" selected="true" text="Aluno" />
                            <RadioButton fx:id="radioOrientador" onAction="#toggleHboxOrientador" text="Orientador" />
                            <RadioButton fx:id="radioProfessorTG" onAction="#toggleHboxOrientador" text="Professor de TG" />
                        </children>
                    </HBox>

                    <!-- Orientador (Opcional) -->
                    <HBox fx:id="hBoxOrientador" alignment="CENTER_LEFT" managed="true" spacing="10" visible="true">
                        <children>
                            <Label prefHeight="18.0" prefWidth="92.0" style="-fx-font-weight: bold; -fx-font-size: 12;" text="Orientador" textFill="#333" />
                            <ComboBox fx:id="comboBoxOrientador" prefHeight="26.0" prefWidth="200.0" promptText="Selecione um orientador..." />
                        </children>
                    </HBox>

                    <!-- Professor de TG (para Aluno) -->
                    <HBox fx:id="hBoxCurso" alignment="CENTER_LEFT" managed="true" spacing="10" visible="true">
                        <children>
                            <Label prefHeight="18.0" prefWidth="92.0" style="-fx-font-weight: bold; -fx-font-size: 12;" text="Professor de TG" textFill="#333" />
                            <ChoiceBox fx:id="choiceBoxProfessorTG" prefHeight="30.0" prefWidth="200" />
                        </children>
                    </HBox>

                    <!-- Disciplina TG (para Aluno quando professor for TG1/TG2) -->
                    <HBox fx:id="hBoxDisciplinaToggle" alignment="CENTER_LEFT" managed="false" spacing="15" visible="false">
                        <children>
                            <Label prefHeight="18.0" prefWidth="92.0" style="-fx-font-weight: bold; -fx-font-size: 12;" text="Disciplina TG" textFill="#333" />
                            <RadioButton fx:id="radioTG1" text="TG1" />
                            <RadioButton fx:id="radioTG2" text="TG2" />
                            <RadioButton fx:id="radioTG1TG2" text="TG1/TG2" />
                        </children>
                    </HBox>

                    <!-- Disciplina (para Professor de TG) -->
                    <HBox fx:id="hBoxDisciplina" alignment="CENTER_LEFT" managed="false" spacing="10" visible="false">
                        <children>
                            <Label prefWidth="62.0" style="-fx-font-weight: bold; -fx-font-size: 12;" text="Disciplina" textFill="#333" />
                            <ComboBox fx:id="comboBoxDisciplina" prefWidth="160" />
                        </children>
                    </HBox>

                    <!-- Botões -->
                    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10 0 0 0;">
                        <children>
                            <Button onAction="#voltar" prefHeight="35" prefWidth="120" style="-fx-background-color: #B82E1A; -fx-text-fill: white; -fx-font-size: 13; -fx-background-radius: 6;" text="Voltar" />
                            <Button fx:id="btnCadastrar" onAction="#cadastrarUsuario" prefHeight="35" prefWidth="120" style="-fx-background-color: #B82E1A; -fx-text-fill: white; -fx-font-size: 13; -fx-background-radius: 6;" text="Cadastrar" />
                        </children>
                    </HBox>

                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>
