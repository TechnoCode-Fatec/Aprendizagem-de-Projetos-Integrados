<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<ScrollPane id="formulario" fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            style="-fx-background-color: #F8F9FA; -fx-background: transparent;"
            stylesheets="@../css/estilo.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.technocode.Controllers.Orientador.EntregasDoAlunoController">

    <content>
        <VBox spacing="20" style="-fx-background-color: #F8F9FA; -fx-padding: 25;" alignment="TOP_CENTER">

            <!-- Cabeçalho -->
            <HBox alignment="CENTER" spacing="30"
                  style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltarTelaOrientador" prefHeight="40.0" prefWidth="120.0"
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);"
                            text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>

                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label fx:id="labelTitulo" text="ANÁLISE DO ALUNO" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Visualize as seções e informações do aluno" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>

                    <Button mnemonicParsing="false" onAction="#abrirHistorico" prefHeight="40.0" prefWidth="120.0"
                            style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);"
                            text="HISTÓRICO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Card: Informações do Aluno -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12;
                                      -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);"
                  maxWidth="800">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Region style="-fx-background-color: #3498DB; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                    <Label text="Informações do Aluno" textFill="#2C3E50">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </HBox>

                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Label fx:id="nomeAluno" text="Nome: " textFill="#34495E">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label fx:id="emailAluno" text="Email: " textFill="#34495E">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                    <Label fx:id="cursoAluno" text="Matriculado em: " textFill="#34495E">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Label>
                </VBox>
            </VBox>

            <!-- Card: Entregas -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12;
                                      -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);"
                  maxWidth="1000">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Region style="-fx-background-color: #27AE60; -fx-background-radius: 4;" prefWidth="4" prefHeight="24" />
                    <Label text="Entregas e Seções" textFill="#2C3E50">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                </HBox>

                <TableView fx:id="tabelaSecao" prefHeight="350.0" style="-fx-background-radius: 8; -fx-border-radius: 8;">
                    <columns>
                        <TableColumn fx:id="colNomeSecao" text="Nome da Seção" prefWidth="250" />
                        <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="300" />
                        <TableColumn fx:id="colStatusFeedback" text="Status" prefWidth="250" />
                        <TableColumn fx:id="colAnalisar" text="Analisar" prefWidth="150" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </content>
</ScrollPane>
