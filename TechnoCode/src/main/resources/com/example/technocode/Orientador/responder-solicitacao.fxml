<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane id="telas-orientador" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #F8F9FA; -fx-background: transparent;" stylesheets="@../css/estilo.css" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Orientador.ResponderSolicitacaoController">
    <content>
        <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="20" style="-fx-background-color: #F8F9FA; -fx-padding: 25;">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <Button mnemonicParsing="false" onAction="#voltar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #B82E1A; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(184,46,26,0.3), 5, 0, 0, 2);" text="← VOLTAR" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="13.0" />
                        </font>
                    </Button>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="RESPONDER SOLICITAÇÃO" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Aceite ou recuse a solicitação de orientação" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                </children>
            </HBox>

            <!-- Card Informações do Aluno -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region prefHeight="24" prefWidth="4" style="-fx-background-color: #3498DB; -fx-background-radius: 4;" />
                        <Label text="Informações do Aluno" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                        <Label fx:id="labelNomeAluno" text="Nome: " textFill="#2C3E50">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="labelEmailAluno" text="Email: " textFill="#2C3E50">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="labelDataSolicitacao" text="Data da Solicitação: " textFill="#2C3E50">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </children>
            </VBox>

            <!-- Card Mensagem de Recusa -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region prefHeight="24" prefWidth="4" style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" />
                        <Label text="Mensagem de Justificativa (obrigatória para recusa)" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    <TextArea fx:id="textAreaMensagem" prefHeight="150.0" promptText="Digite uma mensagem justificando a recusa..." wrapText="true" />
                </children>
            </VBox>

            <!-- Botões de Ação -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
                <children>
                    <Button fx:id="btnAceitar" mnemonicParsing="false" onAction="#aceitarSolicitacao" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #27AE60; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(39,174,96,0.3), 5, 0, 0, 2);" text="ACEITAR SOLICITAÇÃO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnRecusar" mnemonicParsing="false" onAction="#recusarSolicitacao" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #E74C3C; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(231,76,60,0.3), 5, 0, 0, 2);" text="RECUSAR SOLICITAÇÃO" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
        </VBox>
    </content>
</ScrollPane>

