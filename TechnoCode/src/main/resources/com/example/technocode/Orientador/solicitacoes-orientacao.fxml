<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane id="telas-orientador" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #F8F9FA; -fx-background: transparent;" stylesheets="@../css/estilo.css" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technocode.Controllers.Orientador.SolicitacoesOrientacaoController">
    <content>
        <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" spacing="20" style="-fx-background-color: #F8F9FA; -fx-padding: 25;">
            
            <!-- Header Moderno -->
            <HBox alignment="CENTER" spacing="30" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <VBox alignment="CENTER" spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="SOLICITAÇÕES DE ORIENTAÇÃO" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Gerencie as solicitações de orientação recebidas" textFill="#7F8C8D">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </VBox>
                </children>
            </HBox>

            <!-- Card com Tabela de Solicitações Pendentes -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region prefHeight="24" prefWidth="4" style="-fx-background-color: #9B59B6; -fx-background-radius: 4;" />
                        <Label text="Solicitações Pendentes" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    
                    <TableView fx:id="tabelaSolicitacoes" maxWidth="1.7976931348623157E308" prefHeight="300.0">
                        <columns>
                            <TableColumn fx:id="colNomeAluno" prefWidth="250.0" text="Nome do Aluno" />
                            <TableColumn fx:id="colEmailAluno" prefWidth="300.0" text="Email" />
                            <TableColumn fx:id="colDataSolicitacao" prefWidth="200.0" text="Data Solicitação" />
                            <TableColumn fx:id="colAcoes" prefWidth="150.0" text="Ações" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>

            <!-- Card Histórico de Solicitações -->
            <VBox spacing="15" style="-fx-background-color: WHITE; -fx-background-radius: 12; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Region prefHeight="24" prefWidth="4" style="-fx-background-color: #E74C3C; -fx-background-radius: 4;" />
                        <Label text="Histórico de Solicitações" textFill="#2C3E50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </HBox>
                    <TableView fx:id="tabelaHistorico" maxWidth="1.7976931348623157E308" prefHeight="300.0">
                        <columns>
                            <TableColumn fx:id="colHistoricoNomeAluno" prefWidth="250.0" text="Nome do Aluno" />
                            <TableColumn fx:id="colHistoricoEmailAluno" prefWidth="300.0" text="Email" />
                            <TableColumn fx:id="colHistoricoStatus" prefWidth="120.0" text="Status" />
                            <TableColumn fx:id="colHistoricoDataSolicitacao" prefWidth="200.0" text="Data Solicitação" />
                            <TableColumn fx:id="colHistoricoMensagem" prefWidth="400.0" text="Mensagem" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </VBox>
    </content>
</ScrollPane>

