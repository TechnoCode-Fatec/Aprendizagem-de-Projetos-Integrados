                            <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Contribuições Pessoais">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoContribuicoes" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                            <VBox GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Button fx:id="aprovarContribuicoes" text="✔" onAction="#aprovarContribuicoes" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
                                            <Button fx:id="revisarContribuicoes" text="✖" onAction="#revisarContribuicoes" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
