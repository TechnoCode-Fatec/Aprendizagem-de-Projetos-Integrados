                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="360.0" prefWidth="380.0" />
                                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" minWidth="320.0" prefWidth="360.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                                <RowConstraints valignment="TOP" vgrow="NEVER" />
                            </rowConstraints>

                            <!-- Problema -->
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Problema">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoProblema" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Button fx:id="aprovarProblema" text="✔" onAction="#aprovarProblema" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
                                            <Button fx:id="revisarProblema" text="✖" onAction="#revisarProblema" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackProblema" promptText="Digite seu feedback..." wrapText="true" visible="false" prefHeight="100.0" />
                                </children>
                            </VBox>

                            <!-- Solução -->
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Solução">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoSolucao" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Button fx:id="aprovarSolucao" text="✔" onAction="#aprovarSolucao" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
