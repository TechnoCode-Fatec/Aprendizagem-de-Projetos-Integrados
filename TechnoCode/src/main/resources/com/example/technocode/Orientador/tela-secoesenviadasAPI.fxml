                                    <TextArea fx:id="feedbackHardSkills" promptText="Digite seu feedback..." wrapText="true" visible="false" prefHeight="100.0" />
                                </children>
                            </VBox>

                            <!-- Soft Skills -->
                            <VBox GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-spacing: 8;">
                                <children>
                                    <Label text="Soft Skills">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <TextArea fx:id="alunoSoftSkills" editable="false" wrapText="true" prefHeight="130.0" style="-fx-background-color: #f0f0f0; -fx-background-radius: 8;" />
                                </children>
                            </VBox>
                            <VBox GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-spacing: 8;">
                                <children>
                                    <HBox spacing="10">
                                        <children>
                                            <Button fx:id="aprovarSoftSkills" text="✔" onAction="#aprovarSoftSkills" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
                                            <Button fx:id="revisarSoftSkills" text="✖" onAction="#revisarSoftSkills" prefWidth="40.0" style="-fx-background-color: #5E5555; -fx-text-fill: white;" />
                                        </children>
                                    </HBox>
                                    <TextArea fx:id="feedbackSoftSkills" promptText="Digite seu feedback..." wrapText="true" visible="false" prefHeight="100.0" />
                                </children>
                            </VBox>
                        </GridPane>

                        <HBox alignment="CENTER" style="-fx-padding: 10;">
                            <children>
                                <Button mnemonicParsing="false" onAction="#enviarFeedback" prefHeight="34.0" prefWidth="160.0" style="-fx-background-color: #5E5555;" text="Enviar Feedback" textFill="WHITE">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>


